<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mediacontroller">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#50000000"  >

        <DigitalClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F0F0F0"
            android:textSize="30sp" />

        <TextView
            android:layout_width="600dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-10dp"
            android:gravity="top"
            android:text="This is some show/movie summary info"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Playing"
            android:textColor="#F0F0F0"
            android:textSize="30sp" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/mediacontroller_progress_layout"
        android:background="#50000000"  >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="Show Title"
            android:textSize="20sp"
            />
   </LinearLayout>
        

    <LinearLayout android:id="@+id/mediacontroller_progress_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mediacontroller_controls_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:background="#50000000"  >

        <TextView android:id="@+id/mediacontroller_time_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="00:00:00"
            android:textColor="#F0F0F0"
            android:textSize="15sp" />

        <SeekBar android:id="@+id/mediacontroller_seekbar"
            android:layout_width="600dp"
            android:layout_height="15dp"
            android:minWidth="600dp"
            android:focusable="true"
            android:max="1000"
         />

        <TextView android:id="@+id/mediacontroller_time_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99:99:99"
            android:textColor="#F0F0F0"
            android:textSize="15sp" />
    </LinearLayout>
    
    <LinearLayout android:id="@+id/mediacontroller_controls_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:background="#50000000" >
        
        <ImageButton android:id="@+id/osd_rewind_control" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/osd_rewind_nf"
            android:background="@android:color/transparent"
            android:focusable="true"/>
        
        <ImageButton android:id="@+id/mediacontroller_play_pause" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/osd_play_nf"
            android:background="@android:color/transparent"
            android:focusable="true"/>
        
        
        <ImageButton android:id="@+id/osd_stop_control" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/osd_stop_nf"
            android:background="@android:color/transparent"
            android:focusable="true"/>
            />
        
        <ImageButton android:id="@+id/osd_ff_control" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/osd_forward_nf"
            android:background="@android:color/transparent"
            android:focusable="true"/>
        
     </LinearLayout>
    
</RelativeLayout>